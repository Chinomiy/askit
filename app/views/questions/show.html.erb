<h1 class="mb-4">
    <%@question.title%>
</h1>
<p class="lead my-3">
    <%=@question.body%>
</p>
    <%= link_to 'Edit', edit_question_path(@question), class: 'btn btn-secondary'%> 
    <%= link_to 'Destroy' , question_path(@question), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class:'btn btn-danger'%> 

<hr class="my-3">

<h2>Write your answer</h2>

<%= render 'answers/form', question: @question, answer: @answer%>

<h2 class="mt-5">Answers</h2>

<% @answers.each do |answer| %>
<article class="mb-3 card">
  <div class="card-body">
    <section class="card-text">
      <small>
        <time datetime="<%= answer.formatted_created_at%>">
        <%= answer.formatted_created_at%>
        </time>
      </small>
      <p>
        <%= answer.body%>
      </p>
    </section>
    <%= link_to 'Edit', edit_question_answer_path(@question, answer), class: "btn btn-info btn-sm"%>
  <%= link_to 'Delete', question_answer_path(@question, answer), class: "btn btn-danger btn-sm", data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}%>
  </div>
  </article>
<%end%>
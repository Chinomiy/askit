<h1 class="mb-4">All questions</h1>

<%@questions.each do |question|%>
<article class="card">
    <div class="card-body">
        <h4><%= question.title%></h2>
        <section class="card-text">
            <p class="my-2">
                <%=question.body%>  
            </p>
        </section>
        <%= link_to 'Edit', edit_question_path(question), class: 'btn btn-secondary'%> 
        <%= link_to 'Destroy' , question_path(question), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class:'btn btn-danger'%> 
        <%= link_to 'Show' , question_path(question), class:'btn btn-primary'%>
    </div>
</article>
<%end%>